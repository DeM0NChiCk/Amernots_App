<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.amernotsapp.ui.screen.fragment.SignInFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_authFragment_to_regFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.amernotsapp.ui.screen.fragment.SignUpFragment"
        android:label="RegFragment"
        tools:layout="@layout/fragment_sign_up">
    </fragment>
</navigation>